<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Views.MenuView">
    <stylesheets>
        <URL value="@/assets/css/main.css" />
    </stylesheets>
    <BorderPane fx:id="MenuSection" styleClass="Background" maxHeight="-Infinity" maxWidth="-Infinity"
                minHeight="400" minWidth="600">
        <top>
            <HBox prefHeight="120">
                <Text styleClass="Title">Menu</Text>
            </HBox>
        </top>
        <center>
            <GridPane styleClass="MenuPane">
                <Button styleClass="MenuButton" GridPane.columnIndex="2" GridPane.rowIndex="1" onMouseClicked="#startCreateNewGame">Make a Lobby</Button>
                <Button styleClass="MenuButton" GridPane.columnIndex="2" GridPane.rowIndex="2" onMouseClicked="#startJoiningAGame">Joins a Lobby</Button>
                <Button styleClass="MenuButton" GridPane.columnIndex="3" GridPane.rowIndex="1" onMouseClicked="#openAboutMe">GameCreation</Button>
                <Button styleClass="MenuButton" GridPane.columnIndex="3" GridPane.rowIndex="2" onMouseClicked="#QuitApplication">Quit</Button>
            <ImageView>
<!--            <Image fx:id="welcomingImage"/>-->
            </ImageView>
            </GridPane>
        </center>
        <bottom>

        </bottom>
    </BorderPane>

</AnchorPane>
